{
  "name": "@gvempire/nextjs-starter",
  "version": "0.0.4",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "start": "next",
    "build": "next build",
    "build:docs": "typedoc --out docs --tsconfig ./tsconfig.json --categorizeByGroup true --includeDeclarations --excludeExternals --name \"NextJS-Starter\" --includeVersion --readme ./README.md ",
    "export": "next export",
    "serve": "next start",
    "serve:docs": "npx serve ./docs",
    "type-check": "tsc",
    "format": "prettier --write ./**/*/*.{jsx,js,ts,tsx}",
    "lint": "echo 'No Linting -->'",
    "test": "jest -c jest.config.js --forceExit",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "predeploy": "npm-run-all -l -s format lint type-check test",
    "deploy": "npm-run-all -l -s deploy:*",
    "deploy:release": "standard-version"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "emotion-reset": "^2.0.7",
    "emotion-theming": "^10.0.27",
    "framer-motion": "^2.9.4",
    "next": "^10.2.0",
    "react": "^17.x.x",
    "react-dom": "^16.12.0",
    "react-icons": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-typescript": "^7.12.1",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@testing-library/dom": "^7.26.3",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.12.21",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "cz-conventional-changelog": "3.3.0",
    "jest": "^26.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "standard-version": "^9.3.1",
    "ts-jest": "^26.4.3",
    "typedoc": "^0.19.2",
    "typescript": "4.0"
  }
}
